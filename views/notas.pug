html
  head
    title Mis Notas
    style
      | body {
      |   font-family: Arial, sans-serif;
      |   background-color: #f1f1f1;
      |   padding: 20px;
      | }
      | h1 {
      |   color: #333;
      | }
      | h2 {
      |   color: #666;
      |   margin-top: 20px;
      | }
      | ul {
      |   list-style-type: none;
      |   padding: 0;
      | }
      | li {
      |   margin-bottom: 10px;
      | }
      | form {
      |   margin-top: 20px;
      | }
      | label {
      |   display: block;
      |   color: #333;
      |   margin-bottom: 5px;
      | }
      | input[type="text"],
      | input[type="number"] {
      |   width: 200px;
      |   padding: 5px;
      |   border: 1px solid #ccc;
      |   border-radius: 3px;
      | }
      | input[type="submit"] {
      |   background-color: #333;
      |   color: #fff;
      |   padding: 10px 20px;
      |   border: none;
      |   border-radius: 3px;
      |   cursor: pointer;
      | }

  body
    h1 Mis Notas
    h2 Datos existentes
    ul
      form(action="/guardar-nota" method="POST")
        each dato in datosAlumnos
          - var alumno_id = dato.id
          li
            label Nombre:
            input(type="text" name="nombre" placeholder="ID" value=dato.columna1)
            input(type="hidden" name="alumno_id" placeholder="ID" value=dato.id)
            - var notaValue = datosNotas ? datosNotas[0]?.nota : ''
            label Nota:
            input(type="text" name="nota" placeholder="Nota" value=notaValue)
        li
          button(type="submit") Agregar

    each dato in datosAlumnos
      - var alumno_id = dato.id
      form(action=`/eliminar-nota/${alumno_id}` method="POST")
          button(type="submit") Eliminar



            
                
